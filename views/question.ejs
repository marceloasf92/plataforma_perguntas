<%- include ("partials/header.ejs") %>
<body>
  <%- include ("partials/navbar.ejs") %>
  <div class="container">
    <div class="card" id="question-form">
      <div class="card-header">
        <h3>Realizar pergunta:</h3>
      </div>
      <div class="card-body">
        <form method="POST" action="/questions/save">
          <label>Título</label>
          <input
            type="text"
            placeholder="Título"
            class="form-control"
            name="title"
          />
          <label>Descrição</label>
          <textarea
            placeholder="Descreva sua pergunta aqui..."
            class="form-control"
            name="description"
          ></textarea>
          <button class="btn btn-dark">Perguntar</button>
        </form>
      </div>
    </div>
  </div>
</body>
<%- include ("partials/scripts.ejs") %>
